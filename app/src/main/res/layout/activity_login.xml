<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.demo.myapplication.LoginActivity">

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tBarHome" />

    <Button
        android:text="Register"
        android:layout_height="wrap_content"
        android:id="@+id/Register"
        android:layout_width="wrap_content"
        android:layout_gravity="top|right"
        android:visibility="visible" />

    <Button
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LogIn"
        android:layout_gravity="top"
        android:visibility="visible"
        android:background="@android:color/darker_gray" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blogin"
        android:layout_below="@+id/etUsername"
        android:layout_alignStart="@+id/tvRegisterLink"
        android:layout_gravity="bottom|center" />

    <TextView
        android:text="Please login with username and password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvInputinfo"
        android:layout_marginBottom="69dp"
        android:layout_above="@+id/blogin"
        android:layout_alignParentStart="true"
        android:layout_gravity="top|right"
        android:visibility="invisible" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/etUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:hint="username"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="50dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etPassword"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:password="true"
        android:hint="password"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50dp" />

    <include layout="@layout/content_search" />

</android.support.design.widget.CoordinatorLayout>
